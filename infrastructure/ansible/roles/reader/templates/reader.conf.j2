; RFID Reader Configuration Template
; Generated by Ansible
; Jinja2 Version: 3.0+

[General]
; Unique identifier and name for the reader instance
reader_id = {{ reader_id }}
reader_name = {{ reader_name }}

[LLRP]
; LLRP protocol settings as per EPC Gen2 standard
version = {{ llrp_version | default('1.1') }}
read_rate = {{ read_rate | default(1000) }}
anti_collision = true
connection_timeout = 30

[RF]
; Radio frequency and power settings
; Frequency band in MHz (EU standard)
frequency_band = {{ frequency_band | default('865-868') }}
; Signal strength range in dBm
min_power = {{ min_power | default(-70.0) }}
max_power = {{ max_power | default(-20.0) }}
; Dynamic power adjustment
auto_adjust_power = true

[Performance]
; Read performance and timing settings
read_interval_ms = {{ read_interval_ms | default(1000) }}
deduplication_window = {{ deduplication_window | default(5000) }}
; Buffer settings for high-throughput operation
read_buffer_size = 8192
max_packet_size = 1024

[Filtering]
; Read filtering and data quality settings
enable_filtering = true
rssi_threshold = -65
minimum_read_count = 2
duplicate_elimination = true

[Monitoring]
; Health monitoring and metrics configuration
health_check_interval = {{ health_check_interval | default(60) }}
metrics_port = {{ metrics_port | default(9090) }}
enable_diagnostics = true
log_level = INFO

[Network]
; Network configuration for reader communication
connection_mode = TCP
retry_interval = 5
max_retries = 3
keepalive_interval = 30

[Security]
; Security settings for reader operation
require_encryption = true
tls_version = 1.2
verify_certificates = true

[Alerts]
; Alert thresholds and notification settings
low_power_threshold = -60
high_temperature_threshold = 60
alert_interval = 300

[Advanced]
; Advanced tuning parameters
queue_size = 10000
worker_threads = 4
memory_limit_mb = 512