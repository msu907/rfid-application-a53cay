{
  "name": "@rfid/backend",
  "version": "1.0.0",
  "description": "Enterprise RFID Asset Tracking System Backend Services",
  "private": true,
  "workspaces": [
    "api-gateway",
    "asset-service",
    "reader-service",
    "visualization-service"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --stream --concurrency 4",
    "test": "lerna run test --stream --concurrency 4 -- --coverage",
    "lint": "lerna run lint --stream --concurrency 4 -- --fix",
    "clean": "lerna clean && rimraf node_modules",
    "dev": "concurrently \"lerna run dev --stream --scope @rfid/api-gateway\" \"lerna run dev --stream --scope @rfid/asset-service\" \"lerna run dev --stream --scope @rfid/reader-service\" \"lerna run dev --stream --scope @rfid/visualization-service\"",
    "start": "lerna run start --stream --scope @rfid/api-gateway && lerna run start --stream",
    "audit": "npm audit && lerna exec -- npm audit",
    "format": "lerna run format --stream --concurrency 4"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.1.0",
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.0",
    "circuit-breaker-js": "^0.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.29.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.0",
    "lodash": "^4.17.21",
    "morgan": "^3.0.0",
    "opossum": "^6.0.0",
    "performance-now": "^2.1.0",
    "prom-client": "^14.0.0",
    "protobufjs": "^7.2.0",
    "rate-limiter-flexible": "^2.4.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.0",
    "swagger-ui-express": "^4.6.0",
    "winston": "^3.9.0",
    "ws": "^8.13.0",
    "zlib": "^1.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@grpc/mock": "^1.0.0",
    "@jest/globals": "^29.0.0",
    "concurrently": "^8.0.0",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.5.0",
    "lerna": "^6.6.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "typescript": "^4.9.0"
  }
}